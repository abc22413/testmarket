# Production Environment Configuration
# Copy this file to .env and fill in prod values

# Flask Configuration
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
DEBUG=False

# Security - REQUIRED FOR PRODUCTION
SECRET_KEY=your-very-secure-random-secret-key-here-min-32-chars

# Database
# For development: sqlite:///market.db
# For production: postgresql+psycopg2://user:password@host:port/dbname
SQLALCHEMY_DATABASE_URI=sqlite:///market.db

# Admin User (optional - creates on startup if both are set)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-to-secure-password

# LMSR Liquidity Parameter
LMSR_B=10.0
