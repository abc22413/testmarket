### Example environment variables for production deployment
# Copy this file to .env and fill in secure values before starting the app

FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
DEBUG=False

# Secret key (must be set in production)
SECRET_KEY=change-me-to-a-random-32+char-string

# Database - Postgres example (recommended for production)
# Replace user, password, host, port and dbname as appropriate
SQLALCHEMY_DATABASE_URI=postgresql://market:market-password@localhost:5432/marketdb

# Admin initial user (optional)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=strong-admin-password

# LMSR liquidity parameter
LMSR_B=10.0
