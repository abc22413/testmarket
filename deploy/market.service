[Unit]
Description=Market App Gunicorn Service
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/testmarket
EnvironmentFile=/home/ubuntu/testmarket/.env
ExecStart=/home/ubuntu/testmarket/venv/bin/gunicorn -w 4 -b 127.0.0.1:5000 --timeout 120 wsgi:app
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

# NOTE: Update User, WorkingDirectory and EnvironmentFile paths to match your EC2 setup.